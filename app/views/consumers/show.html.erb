<div id="navigation">
  <ul>
    <!-- top navigation use selected class for selected item -->
    <li class="selected">
      <a href="/consumers/1">Influencer</a></li>
    <li><a href="/categories">Buyer</a></li>

  </ul>
</div>

<div style="margin-top:10px;margin-right:20px;text-align:right;">
  <form action="/categories/1">
    <input type="text" value="search for brands, people or products" onfocus="this.value = ''"> <input type="submit" value="go"/>
  </form>
</div>

<!-- left hand main content -->
<div id="page">
  <img src="<%= @consumer.picture %>"/>

  <h2 id="center">Your Top Brands</h2>
  <ol id="center">

    <% @consumer.influences.each do |influence| %>
        <li><img src="<%= influence.brand.picture %>" height="20"/> <strong><a href="#"><%= influence.brand.name %></a> <a href="#">(<%= influence.brand.category.title %>)</a> <%= influence.influence %> </strong></li>
    <% end %>

  </ol>
</div>
<!-- end left hand main content -->

<!-- start sidebar -->
<div id="sidebar">

  <!-- sidebar h3: use <strong> for black text -->

  <h3> <%= @consumer.influences.first.brand.category.title %></h3>
  <div style="_height:300px; width:200px;background-color:#F7F7F7;font-family:Arial; border: 1px solid #F7F7F7; text-align:center;">
    <div style="padding:5px;">
      <% Brand.find_all_by_category_id(@consumer.influences.first.brand.category.id).each do |brand| %>
        <img src="<%= brand.picture %>" height="<%= brand.influence %>"/> <a href="" style="font-size:<%= brand.influence %>px;text-decoration:none; color: #000000;"><%= brand.name %></a>  
      <% end %>
    </div>
  </div>

  <br/>


  <h3> Promote your favorite brand </h3>
  <br/>
  <h5>Help your choice brand, spread the word</h5>
  <br/>
  <div id="msg"><textarea rows="10" cols="40">Tell your friends what you like  <%= @consumer.influences.first.brand.name %> for</textarea> </div>


  <br/>
  <aside>
    <fb:like href="https://www.facebook.com/pages/RackOAuth2/141477809244105" send="false" width="450" show_faces="true"></fb:like>
  </aside>


</div>
<!-- end sidebar -->


